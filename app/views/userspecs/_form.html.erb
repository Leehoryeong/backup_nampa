<%= form_for(userspec) do |f| %>
  <% if userspec.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(userspec.errors.count, "error") %> prohibited this userspec from being saved:</h2>

      <ul>
      <% userspec.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="d-flex justify-content-start new-form-line">
    <div class="field">
      <%= f.label :skintype %>
      <%= f.select( :skintype, ['건성', '지성', '복합성', '중성', '민감성'], {}, { :class => 'form-control input-select'}) %>
    </div>
    <div class="field" style="margin-left: 20px;">
      <%= f.label :age %>
      <%= f.select( :age, ['10대', '20대초반', '20대후반', '30대초반', '30대후반', '40대이상'],  {}, { :class => 'form-control input-select'}) %>
    </div>
  </div>

  <div class="d-flex justify-content-start new-form-line" style="margin: 10px 0;">
    <div class="field">
      <%= f.label :atopy %>
      <%= f.check_box :atopy, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label :pimple %>
      <%= f.check_box :pimple, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label :allergy %>
      <%= f.check_box :allergy, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label :bb %>
      <%= f.check_box :bb, class: "spec-detail"%>
    </div>
    <div class="field">
      <%= f.label :lip %>
      <%= f.check_box :lip, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label :eyebrow %>
      <%= f.check_box :eyebrow, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label :eyeline %>
      <%= f.check_box :eyeline, class: "spec-detail" %>
    </div>
    <div class="field">
      <%= f.label :color %>
      <%= f.check_box :color, class: "spec-detail" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :skincolor %>: 1~30
    <%= f.number_field :skincolor, type: "range", class: "custom-range", min: 0, max: 30, step: 1, id: "customRange3"  %>
  </div>

  <div align="center">
    <div class="actions" style="margin: 20px 0px;">
      <%= f.submit "작성", class:"btn btn-secondary", style:"margin-right: 10px;" %>
      <%= link_to '취소', products_path, class:"btn btn-secondary", style:"margin-left: 10px;" %>
    </div>
  </div>
<% end %>
