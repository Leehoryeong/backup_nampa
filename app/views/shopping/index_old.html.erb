<h3><strong>쇼핑하기</strong></h3>
<div class="shop_wrap d-flex justify-content-center">
  <div class="shop_filter">
    <%= render 'form' %>
  </div>

  <div class="shop_result">
    <%= @data %> <br>
    <%= @products_data %> <br>
    <%= @products.length %>
    <hr>

    <% @products.each do |product| %>
      <p><%= link_to product.name, product_path(product) %></p>
      <%= link_to (image_tag product.image.url(:thumb)), product %>
      <hr>
    <% end %>
  </div>
</div>
