<%= render "header" %>
<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Categroy</th>
      <th>Name</th>
      <th>Brand</th>
      <th>Skintype</th>
      <th>Age</th>
      <th>Atopy</th>
      <th>Pimple</th>
      <th>Allergy</th>
      <th>Bb</th>
      <th>Lip</th>
      <th>Eyebrow</th>
      <th>Eyeline</th>
      <th>Color</th>
      <th>Skincolor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.category %></td>
        <td><%= product.name %></td>
        <td><%= product.brand %></td>
        <td><%= product.skintype %></td>
        <td><%= product.age %></td>
        <td><%= product.atopy %></td>
        <td><%= product.pimple %></td>
        <td><%= product.allergy %></td>
        <td><%= product.bb %></td>
        <td><%= product.lip %></td>
        <td><%= product.eyebrow %></td>
        <td><%= product.eyeline %></td>
        <td><%= product.color %></td>
        <td><%= product.skincolor %></td>

        <td><%= link_to 'Show', product %></td>
        <% if current_user && current_user.roles.first.name == 'admin' %>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user && current_user.roles.first.name == 'admin' %>
  <%= link_to 'New Product', new_product_path %>
<% end %>
