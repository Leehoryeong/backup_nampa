<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<%= render "header" %>
<style type="text/css">
.my-box { border:1px solid; padding:10px; }
</style>
<div class="d-flex justify-content-around">
    <div style="margin-top:5%;margin-right:-30%; width:30%; background-color:linen; vertical-align: middle;" ><p style="font-size:20pt; color:white; text-align:center; background-color:teal;width:100%; height:12%" >남자의 파우치's 특별한 랭킹 </p></div>
    <div style="margin-top:5%;margin-left:5%; width:60%; height:300px;">
    <% @products.each do |product| %>
      <tr>
      </tr>
      <div class="row" style="margin-bottom:4%;">
        <div class="col" style="margin-left:5%;">
          <h1 style="text-align:center"><%= @ranking %> </h1>
        </div>
        <div class="col" style="margin-left:-25%;">
           <%= image_tag product.image.url(:thumb), size:"70x70" %>
        </div>
        <div class="col" style="margin-left:-43%;">
          <p style="font-size:15pt;"><%= product.name%></p>
          <br>
          <p style="margin-top:-10%;">
            <%= product.price %> 원 /
            <% k = product.score.floor()  %>
            <%= product.score %> <%= '♥'*k %><%= '♡'* (5-k)%>(<%= product.reviews.count %>)

            <span class="category-clip badge badge-primary">
              <%= link_to '상세보기', product, style:"color: inherit;" %>
            </span>
          </p>
        </div>
      </div>
      <% @ranking += 1 %>
    <% end %>
    <% ranking = 0 %>
  </div>
  </table>
</div>
