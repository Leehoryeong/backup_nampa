<%= render "header" %>
<h3><strong>뷰티 설명서 :<%= @manuals.count %>개</strong></h3>

<div class="row justify-content-left" style="margin-top: 5%;">
    <% @manuals.each do |manual| %>
    	<div class="card mb-3" style="margin: 10px 10px;">
			<div class="card-body">
			    <h3 class="card-title"><%= manual.title %></h3>
			</div>
		  	<div class="card-body">
			    <h3 class="card-title"><%= image_tag manual.image.url(:thumb) %></h3>
			</div>
        <%= link_to 'Show', manual %>
        
        <% if current_user && current_user.roles.first.name == 'admin' %>
          <%= link_to 'Edit', edit_manual_path(manual) %>
          <%= link_to 'Destroy', manual, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
  
		</div>
    <% end %>
</div>


<br>
<% if current_user && current_user.roles.first.name == 'admin' %>
  <%= link_to '새 메뉴얼 등록', new_manual_path %>
<% end %>









