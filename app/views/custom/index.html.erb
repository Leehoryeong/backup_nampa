<%= render "header" %>
<h3><strong>나의 맞춤 제품</strong></h3>
  <% list = ["피부", "화장", "헤어", "바디"] %>
  <% contentsCount = [0,0,0,0] %>
    <% (0..3).each do |i| %>
      <%= list[i] %>
      <div class="d-flex justify-content-center" >
        <% @products.each do |product| %>
          <%if contentsCount[i] <=5 %>
            <% if product.category == list[i] %>
              <div class="card border-dark mb-3" style="margin: 10px 10px;">
                <div class="card-header"><%= link_to product.name, product %><%= product.category %></div>
                <div class="card-body text-dark">
                  <h3 class="card-title"><%= image_tag product.image.url(:thumb) %></h3>
                  <h5 class="card-title"><%= product.price %></h5>
                </div>
              </div>
            <% end %>
            <% contentsCount[i] += 1 %>
          <% end %>
        <% end %>
      </div>
      
      <% contentsCount = [0,0,0,0] %>
    <% end %>
    
    
    
    

