<%= render "header" %>
<h3><strong>나의 맞춤 제품</strong></h3>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>id</th>
      <th>Categroy</th>
      <th>Name</th>
      <th>Brand</th>
      <th>Skintype</th>
      <th>Age</th>
      <th>Atopy</th>
      <th>Pimple</th>
      <th>Allergy</th>
      <th>Bb</th>
      <th>Lip</th>
      <th>Eyebrow</th>
      <th>Eyeline</th>
      <th>Color</th>
      <th>Skincolor</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>

      <tr>
        <td><%= product.id %></td>
        <td><%= product.category %></td>
        <td><%= product.name %></td>
        <td><%= product.brand %></td>
        <td><%= product.skintype %></td>
        <td><%= product.age %></td>
        <td><%= product.atopy %></td>
        <td><%= product.pimple %></td>
        <td><%= product.allergy %></td>
        <td><%= product.bb %></td>
        <td><%= product.lip %></td>
        <td><%= product.eyebrow %></td>
        <td><%= product.eyeline %></td>
        <td><%= product.color %></td>
        <td><%= product.skincolor %></td>
        <td><%= product.score %></td>
        <td><%= link_to 'Show', product %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= @productArray %>
